#!/usr/bin/env bash
#
# Installs the latest unknown-linux-musl binary from the give GitHub repo.
#
set -eu -o pipefail

if [[ -z "${1:-}" ]]; then
	echo "Usage: $0 <user/repo>"
	exit 1
fi
repo="$1"

arch=$(uname -m)
name=$(basename "$repo")

echo "ðŸ’¾ Installing $name â€¦"
tmpdir=$(mktemp -d)
file="$tmpdir/$name.tar.gz"

tag=$(curl -fsSL "https://api.github.com/repos/$repo/releases/latest" | python3 -c "import json,sys;obj=json.load(sys.stdin);print(obj['tag_name']) if 'tag_name' in obj else sys.exit(f\"Error: {obj['message']}\");")
url="https://github.com/$repo/releases/download/$tag/$name-$tag-$arch-unknown-linux-musl.tar.gz"
curl -fL --progress-bar --output "$file" "$url"

tar -xzof "$file" -C "$tmpdir"
mv "$tmpdir/$name-$tag-$arch-unknown-linux-musl/$name" "$HOME/bin/$name"
rm -rf "$tmpdir"

"$HOME/bin/$name" --version
