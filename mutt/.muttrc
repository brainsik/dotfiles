set read_only

set folder="~/Maildir"
set mbox_type=Maildir
set mask='^\.'

set move=no
unset confirmappend

set edit_headers=yes
set abort_nosubject=no
set reverse_name
set use_from

set sort=threads
set sort_aux=reverse-last-date-received

bind pager ] half-down
bind pager [ half-up

set index_format="%4C %Z %{%b %d} %-15.15L %-30.30t (%?l?%4l&%4c?) %s"

# https://gitlab.com/grobian/html2text
set allow_ansi=yes      # html2text -ansi rich rendering
auto_view text/html
alternative_order text/html  text/plain
