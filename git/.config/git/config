# signing
[gpg]
	format = ssh
[commit]
	gpgSign = true
[tag]
	forceSignAnnotated = true

# behavior defaults
[init]
	defaultBranch = main
[push]
	default = current
[pull]
	rebase = true
[rebase]
	autoStash = true
[transfer]
	fsckObjects = true
[difftool]
	prompt = false
[help]
	autocorrect = 20

# commands
[alias]
	amend = commit --amend
	br = !git --no-pager branch
	branch = !git --no-pager branch
	co = checkout
	dc = diff --cached
	dif = diff
	pf = push --force-with-lease
	st = status
	stat = status
	who = blame

# interface
[color]
	ui = true
[diff]
	color = true
	colorMoved = default
[color "diff"]
	new = bold blue
	whitespace = normal yellow
[color "status"]
	changed = magenta
	untracked = bold yellow
